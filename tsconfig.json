{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "lib": ["DOM", "ES2017"],
    "sourceMap": true,
    "outDir": "./public/assets/js/",
    "rootDir": "./src/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}